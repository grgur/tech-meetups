{
  "name": "universal-app",
  "description": "Example of a universal (isomorphic) app using JSPM + React + Redux",
  "version": "0.0.1",
  "homepage": "http://github.com/grgur/universal-app",
  "author": "Grgur Grisogono <grguru@gmail.com> (http://github.com/grgur)",
  "license": "MIT",
