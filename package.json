    "type": "git",
    "url": "https://github.com/grgur/universal-app.git"
  },
  "jspm": {
    "directories": {},
    "dependencies": {
      "react": "npm:react@^0.14.0-beta3",
      "react-dom": "npm:react-dom@^0.14.0-beta3",
      "react-redux": "npm:react-redux@^0.8.2",
      "redux": "npm:redux@1.0.0-rc",
      "redux-thunk": "npm:redux-thunk@^0.1.0"
    },
